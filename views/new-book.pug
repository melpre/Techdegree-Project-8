extends layout

block content
h1= title 
form
  //- Validation elements: if there is an error, show, otherwise hide
  //- notifies user of errors in form
  if(errors)
    h2.errors Oooops!
    ul.errors
      each error in errors 
      li
        =error.message 
  //-
  p
    label(for='title') Title
    input#title(name='title' type='text')
  p
    label(for='author') Author
    input#author(name='author' type='text')
  p
    label(for='genre') Genre
    input#genre(name='genre' type='text')
  p
    label(for='year') Year
    input#year(name='year' type='text')
  p
    input(type='submit' value='Create New Book')
  p
    a.button(href='all_books.html') Cancel